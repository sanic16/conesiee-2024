generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  fullName String
  email String @unique
  password String
  imageUrl String
  role Role @default(ADMIN)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum Role {
  ADMIN
  USER
}

model StudentPayment {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  email String
  name String
  studentId String
  dpi String 
  phone String
  career String
  university String?
  ticketNumber String
  registrationPackage String
  imageUrl String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

